<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <!--originally taken from https://liquibase.jira.com/browse/CORE-1909. Thanks to Mark Chesney -->

  <property name="schemaName" value="public"/>
  <property name="changeLogTableName" value="${database.databaseChangeLogTableName}"/>

  <changeSet id="liquibase-drop-pk-if-exists" author="">
    <preConditions onFail="MARK_RAN">
      <primaryKeyExists schemaName="${schemaName}" tableName="${changeLogTableName}" primaryKeyName="PK_${changeLogTableName}"/>
    </preConditions>
    <dropPrimaryKey schemaName="${schemaName}" tableName="${changeLogTableName}" constraintName="PK_${changeLogTableName}"/>
  </changeSet>

  <changeSet id="liquibase-create-pk" author="">
    <addPrimaryKey schemaName="${schemaName}" tableName="${changeLogTableName}" constraintName="PK_${changeLogTableName}" columnNames="ID,AUTHOR,FILENAME"/>
  </changeSet>

</databaseChangeLog>








